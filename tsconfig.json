{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext", // 保留 import/export
    "rootDir": "src",
    "outDir": "dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"], // 只包含源代码
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
